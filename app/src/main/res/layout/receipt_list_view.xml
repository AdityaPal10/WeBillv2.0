<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgFriend1"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/receipt1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBillAmountTextListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/imgFriend1"
                android:fontFamily="@font/calibri"
                android:text="Bill Amount: $"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvActivityNameListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBillAmountText"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgFriend1"
                android:fontFamily="@font/calibri"
                android:text="Star Market"
                android:textColor="#138806"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvReceiptDateListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvActivityName"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgFriend1"
                android:fontFamily="@font/calibri"
                android:text="01/01/2022"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnReceiptDetailsListView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedbutton"
                android:fontFamily="@font/calibri"
                android:text="Details"
                android:textStyle="bold"
                app:cornerRadius="38dp" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>