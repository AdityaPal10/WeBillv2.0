<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="500dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/tvChoosePicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/calibri"
            android:text="@string/choose_your_profile_picture"
            android:textColor="#000000"
            android:textSize="26sp" />

        <RelativeLayout
            android:id="@+id/picRow1"
            android:layout_below="@+id/tvChoosePicText"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btnX1Y1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="21dp"
                android:background="@drawable/girl2" />

            <Button
                android:id="@+id/btnX2Y1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/boy1"/>

            <Button
                android:id="@+id/btnX3Y1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/boy2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/picRow2"
            android:layout_below="@+id/picRow1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnX1Y2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/girl" />

            <Button
                android:id="@+id/btnX2Y2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/boy4"/>

            <Button
                android:id="@+id/btnX3Y2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/girl3"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/picRow3"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picRow2"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnX1Y3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/girl4" />

            <Button
                android:id="@+id/btnX2Y3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/boy5" />

            <Button
                android:id="@+id/btnX3Y3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/girl5" />
        </RelativeLayout>


    </RelativeLayout>










</ScrollView>